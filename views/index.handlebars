<h2>Burgers That Have Been Devoured!</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burger You Should Eat </h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>


<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">What happened to the Burger ?</label><br>
    <input type="radio" name="devoured" value="1" checked> It was devoured!<br>
    <input type="radio" name="devoured" value="0"> Hasn't Been Eaten
  </div>

  <button type="submit">Add Burger</button>
</form>


